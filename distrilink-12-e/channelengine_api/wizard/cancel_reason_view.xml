<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="view_cancel_reason_form" model="ir.ui.view">
            <field name="name">cancel.reason.form</field>
            <field name="model">cancel.reason</field>
            <field name="arch" type="xml">
                <form string="Cancel Reason form">
                    <group>
                        <field name="reason_code" required="1"/>
                        <field name="name" required="1"/>
                    </group>
                    <footer>
                        <button string="Cancel Order" name="cancel_order" type="object" class="oe_highlight"/>
                            or
                        <button string="Close" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
