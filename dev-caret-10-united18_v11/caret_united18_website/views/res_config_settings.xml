<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="product_image_setting" position="after">
                <div class="col-xs-12 col-md-6 o_setting_box" id="product_available_stock">
                        <div class="o_setting_left_pane">
                            <label for="user_id_for_available_stock" string="User"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <field name="user_id_for_available_stock"/>
                            <div class="text-muted">
                                Product Available stock show on website according user selection.
                            </div>
                        </div>
                    </div>
                </div>
            </field>
        </record>
</odoo>